<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:behavior_hideable="false"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="@string/bottom_sheet_behavior"
    android:padding="20dp"
    android:background="@drawable/roundedcorner"
    android:id="@+id/bottom_sheet"
    >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:paddingTop="5dp">
<LinearLayout

    android:gravity="center"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="50dp">
    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp" app:srcCompat="@drawable/ic_man"
        android:id="@+id/icon" app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
        />
        <TextView
            android:visibility="visible"
            android:text="Sign in"
            android:textAllCaps="false"
            android:drawablePadding="5dp"
            android:theme="@style/MaterialButton.SignIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/signin" android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/icon"
            app:layout_constraintStart_toEndOf="@+id/icon"
            app:layout_constraintTop_toTopOf="@+id/icon"/>
        <TextView
            android:visibility="gone"
            android:text="Sign out"
            android:textAllCaps="false"
            android:drawablePadding="5dp"
            android:theme="@style/MaterialButton.SignIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/signout"
            android:layout_marginStart="16dp" />

</LinearLayout>
        <View
            android:layout_width="match_parent"
            android:background="@color/separator"
            android:layout_height="1dp"
            android:id="@+id/separator_1"
            android:layout_marginTop="8dp" />
        <TextView
            android:text="Send us feedback"
            android:gravity="center"
            android:drawableStart="@drawable/ic_email1"
            android:drawablePadding="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sendfeedback"
            android:textSize="14sp"
            android:layout_marginStart="16dp"
            android:textAlignment="textStart"
            android:layout_marginTop="24dp"
            tools:ignore="RtlCompat" />

        <TextView
            android:text="Rate app on Google Play"
            android:gravity="center"
            android:drawableStart="@drawable/ic_android"
            android:drawablePadding="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rateapp" android:textSize="14sp" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:textAlignment="textStart"
            app:layout_constraintTop_toBottomOf="@+id/notifications" android:layout_marginTop="24dp"
            app:layout_constraintHorizontal_bias="0.0"/>

        <TextView
            android:text="Share App"
            android:gravity="center"
            android:drawableStart="@drawable/ic_share"
            android:drawablePadding="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/shareapp" android:textSize="14sp" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:textAlignment="textStart"
            app:layout_constraintTop_toBottomOf="@+id/history" android:layout_marginTop="24dp"
            app:layout_constraintHorizontal_bias="0.0"/>

        <TextView
            android:visibility="gone"
            android:text="Faqs"
            android:gravity="center"
            android:drawableStart="@drawable/ic_outline_help_outline_24px"
            android:drawablePadding="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/faq" android:textSize="14sp" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:textAlignment="textStart"
            app:layout_constraintTop_toBottomOf="@+id/settings" android:layout_marginTop="24dp"
            app:layout_constraintHorizontal_bias="0.0"/>

        <View
            android:layout_width="wrap_content"
            android:background="@color/separator"
            android:layout_height="1dp"
            android:id="@+id/separator_2"
            android:layout_marginTop="8dp"
            />
        <TextView
            android:gravity="center_horizontal"
            android:text="Privacy Policy &#183; Terms of Service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/separator_2"/>
    </LinearLayout>

</LinearLayout>
